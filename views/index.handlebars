<div class="row">
	<div class="col-sm-6">
		<br>
		<h2>Burgers To Eat!</h2>
		<ul>
			{{#each burger}}
				{{#unless this.devoured}}
			      <li>
			      	{{this.id}}
			        {{this.burger_name}}

			        <form action="/{{this.id}}?_method=PUT" method="POST">
			          <input type="hidden" name="devoured" value="true">
			          <button class="btn-primary" type="submit">Grab It!</button>
			        </form>
			      </li>
				{{/unless}}
			{{/each}}
		</ul>
	</div>

	<div class="col-sm-6">
		<h2>Burgers That Have Been Eaten!</h2>
		<div class="col-xs-6 text-center" class="task">
			{{#each burger}}
			{{#if devoured}}
			<input class="form-control" type="text" placeholder="{{this.id}}.{{burger_name}}" readonly>
            {{/if}}
            {{/each}}
        </div>
	</div>
</div>

<div class="container">
    <div class="row">
        <div class="col-xs-12 text-center enter_section">
			<h1>Create A Burger</h1>
            <form action="/burgers/insertOne" method="POST">
            <input type="text" name="burger_name" class="form-control" value="" id="enter_text">
            <button type="submit" class="btn btn-primary" id="text-enter-button">Create!</button>
        </div>
    </div>
</div>